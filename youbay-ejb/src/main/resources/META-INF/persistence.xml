<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="youbay-ejb">
		<jta-data-source>java:jboss/datasources/youbayDS</jta-data-source>
		<class>tn.edu.esprit.sigma.fusion.entities.YouBayUser</class>
		<class>tn.edu.esprit.sigma.fusion.entities.Manager</class>
		<class>tn.edu.esprit.sigma.fusion.entities.Seller</class>
		<class>tn.edu.esprit.sigma.fusion.entities.Buyer</class>
		<class>tn.edu.esprit.sigma.fusion.entities.Category</class>
		<class>tn.edu.esprit.sigma.fusion.entities.Subcategory</class>
		<class>tn.edu.esprit.sigma.fusion.entities.AssistantItems</class>
		<class>tn.edu.esprit.sigma.fusion.entities.SpecialPromotion</class>
		<class>tn.edu.esprit.sigma.fusion.entities.Auction</class>
		<class>tn.edu.esprit.sigma.fusion.entities.CustomizedAds</class>
		<class>tn.edu.esprit.sigma.fusion.entities.Product</class>
		<class>tn.edu.esprit.sigma.fusion.entities.ProductHistory</class>
		
		
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
		